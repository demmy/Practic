<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog - Zhevago</title>
    <!-- CSS  -->
    <link href="~/Content/materialize/css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <link href="~/Content/materialize/css/style.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <style type="text/css">
        html, body {
            height: 100%;
        }

        #main-wrapper {
            min-height: 100%;
        }

        footer {
            height: 50px;
            margin-top: -50px;
        }
    </style>
</head>
<body>
    <div id="main-wrapper">
        <div class="row">
            <div class="col s12 no-padding">
                <nav class="teal lighten-1">
                    <div class="nav-wrapper">
                        <div class="brand-logo margin-left white-text">@Html.ActionLink("Testing blog", "AllBlogs", "Blog")</div>
                        <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
                        <div class="right hide-on-med-and-down padding-right">
                            <div class="waves-effect waves-light btn light-blue accent-3">@Html.ActionLink("ГЛАВНАЯ", "AllBlogs", "Blog")</div>
                            @if (HttpContext.Current.User.Identity.IsAuthenticated)
                            {
                                <div class="waves-effect waves-light btn light-blue accent-3">@Html.ActionLink("МОИ БЛОГИ", "BlogsUser", "Account")</div>
                                <div class="waves-effect waves-light btn light-blue accent-3">@Html.ActionLink("СОЗДАТЬ БЛОГ", "CreateBlog", "Account")</div>
                                <div class="waves-effect waves-light btn light-blue accent-3">@Html.ActionLink("ВЫЙТИ", "Logoff", "Account")</div>
                            }
                            else
                            {
                                <div class="waves-effect waves-light btn light-blue accent-3">@Html.ActionLink("ВОЙТИ", "Login", "Account")</div>
                            }
                        </div>
                        <ul class="side-nav" id="mobile-demo">
                            <li>@Html.ActionLink("ГЛАВНАЯ", "AllBlogs", "Blog")</li>
                            @if (HttpContext.Current.User.Identity.IsAuthenticated)
                            {
                                <li>@Html.ActionLink("МОИ БЛОГИ", "BlogsUser", "Account")</li>
                                <li>@Html.ActionLink("СОЗДАТЬ БЛОГ", "CreateBlog", "Account")</li>
                                <li>@Html.ActionLink("ВЫЙТИ", "Logoff", "Account")</li>
                            }
                            else
                            {
                                <li>@Html.ActionLink("ВOЙТИ", "Login", "Account")</li>
                            }
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
        <div class="row">
            @RenderBody()
        </div>
        <footer class="page-footer teal lighten-1">
            <div class="footer-copyright teal lighten-1">
                <div class="container center-align">
                    <h6 class="white-text">© @DateTime.Now.Year Copyright by Жеваго Александр</h6>
                </div>
            </div>
        </footer>
        <!--  Scripts-->
        <script src="~/Scripts/materialize/jquery-2.1.3.min.js"></script>
        <script src="~/Scripts/materialize/materialize.js"></script>
        <script src="~/Scripts/materialize/app.js"></script>
</body>
</html>  