@model Blog.WebUI.Models.RegisterModel

<div class="container center-align">
    <h2 class="red-text">Регистрация</h2>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container center-align">
        <h4 class="red-text">@Html.ValidationSummary(true)</h4>
    </div>
    <div class="row">
        <div class="z-depth-1 col s12 m6 l4 offset-m3 offset-l4 white" style="padding: 20px;">
            <div class="container center-align">
                <h5 class="red-text">@Html.ValidationMessageFor(model => model.Email)</h5>
            </div>
            <div class="input-field">
                @Html.LabelFor(model => model.Email)
                @Html.EditorFor(model => model.Email)
            </div>
            <div class="container center-align">
                <h5 class="red-text">@Html.ValidationMessageFor(model => model.Name)</h5>
            </div>
            <div class="input-field">
                @Html.LabelFor(model => model.Name, "Имя")
                @Html.EditorFor(model => model.Name)
            </div>
            <div class="container center-align">
                <h5 class="red-text">@Html.ValidationMessageFor(model => model.Password)</h5>
            </div>
            <div class="input-field">
                @Html.LabelFor(model => model.Password, "Пароль")
                @Html.EditorFor(model => model.Password)
            </div>
            <div class="container center-align">
                <h5 class="red-text">@Html.ValidationMessageFor(model => model.ConfirmPassword)</h5>
            </div>
            <div class="input-field">
                @Html.LabelFor(model => model.ConfirmPassword, "Подтвердите пароль")
                @Html.EditorFor(model => model.ConfirmPassword)
            </div>
            <div class="container center-align">
                <button class="waves-effect waves-light btn light-blue accent-3" type="submit" name="action">ЗАРЕГИСТРИРОВАТЬСЯ</button>
            </div>
        </div>
    </div>
}
    </div>
